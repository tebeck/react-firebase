{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"react-app"
	],
	"parserOptions": {
		"ecmaVersion": 2017
	  },
	"rules": {
        "func-names": 0,
        "indent": ["error", "tab"],
        "no-console": 0,
        "no-tabs": 0,
		"semi": [2, "never"],
		"eol-last": ["error", "always"]
    },
	"overrides": [
		{
			"files": [
				"**/*.test.js"
			],
			"env": {
				"jest": true
			}
		}
	]
}